# ===============================
# Seguridad Headers
# ===============================
<IfModule mod_headers.c>
    # Anti-Clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Evitar MIME sniffing
    Header always set X-Content-Type-Options "nosniff"

    # Protección XSS básica
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy mínima (inline scripts y estilos permitidos para no romper el sitio)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self'; font-src 'self'; connect-src 'self'; frame-ancestors 'self';"

    # HSTS (HTTPS obligatorio)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Feature/Permissions Policy
    Header always set Permissions-Policy "geolocation=(self), microphone=(), camera=()"
</IfModule>

# ===============================
# Cache control
# ===============================
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

<FilesMatch "\.(php)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, private"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# ===============================
# Rewrites existentes
# ===============================
RewriteEngine On

# /index o /index.php -> /
RewriteCond %{THE_REQUEST} /index(\.php)? [NC]
RewriteRule ^index(\.php)?$ / [R=301,L]

# Ocultar extensión .php
RewriteCond %{THE_REQUEST} \s/([^\s]+?)\.php[?\s] [NC]
RewriteRule ^ /%1 [R=301,L]

# URLs limpias
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]
