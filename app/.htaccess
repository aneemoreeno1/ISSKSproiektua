<IfModule mod_headers.c>
    # Anti-Clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Evitar MIME sniffing
    Header always set X-Content-Type-Options "nosniff"

    # Protección XSS
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy segura
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self'; font-src 'self'; connect-src 'self'; frame-ancestors 'self';"

    # HSTS (HTTPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Permissions Policy (Feature Policy moderno)
    Header always set Permissions-Policy "geolocation=(self), microphone=(), camera=()"
</IfModule>

# Cache control para archivos estáticos
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Cache control para PHP
<FilesMatch "\.(php)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, private"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Rewrite rules existentes
RewriteEngine On

# /index o /index.php a /
RewriteCond %{THE_REQUEST} /index(\.php)? [NC]
RewriteRule ^index(\.php)?$ / [R=301,L]

# Ocultar extensión .php
RewriteCond %{THE_REQUEST} \s/([^\s]+?)\.php[?\s] [NC]
RewriteRule ^ /%1 [R=301,L]

# Redirigir URLs limpias a .php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]
